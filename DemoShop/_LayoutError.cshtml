<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html" charset="utf-8"/>
        <title>@PageData["Title"]</title>

        <link rel="shortcut icon" href="@Href("~/files/images/favicon.ico")">
        <link rel="stylesheet" type="text/css" href="@Href("~/files/css/main.css")">
        
        <script type="text/javascript" src="@Href("~/files/js/ffsuggest.js")"></script>
        <script type="text/javascript" src="@Href("~/files/js/jquery/jquery-1.2.6.min.js")"></script>
        
		<script language="JavaScript" type="text/javascript">
		    @RenderPage("~/templates/js/demoshop.js.cshtml")
		</script>
    </head>
    <body>
        <script type="text/javascript" src="@Href("~/files/js/wz_tooltip/wz_tooltip.js")"></script>
        <div id="container">
            <div id="header">
                @RenderPage("~/templates/_header.cshtml")
            </div>

            <div id="searchboxLine" class="asnHint">
                <div id="searchbox">
                    @RenderPage("~/templates/_searchbox.cshtml")
                </div>
            </div>

            <div id="content">
				<div id="asnColumn></div>

				<div id="resultColumn">
                    @RenderBody()
                </div>

				<div id="infoColumn">
					<div id="infoPlaceHolder"></div>
				</div>
            </div>
            
            <div id="footer">
                @RenderPage("~/templates/_footer.cshtml")
            </div>
        </div>
    </body>
</html>
