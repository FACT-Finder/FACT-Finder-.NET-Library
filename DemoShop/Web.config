<?xml version="1.0"?>
<!--
  For more information on how to configure your ASP.NET application, please visit
  http://go.microsoft.com/fwlink/?LinkId=169433
  -->
<configuration>
  <configSections>
    <section name="connection" type="Omikron.FactFinder.Core.Configuration.ConnectionSection,
                                         FactFinder"/>
    <section name="parameters" type="Omikron.FactFinder.Core.Configuration.ParametersSection,
                                         FactFinder"/>
    <section name="modules" type="Omikron.FactFinder.Core.Configuration.ModulesSection,
                                           FactFinder"/>
    <section name="fields" type="Omikron.FactFinder.Core.Configuration.FieldsSection,
                                         FactFinder"/>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,
                                      log4net" />
  </configSections>

  <system.web>
    <compilation debug="true" targetFramework="4.5"/>
    <httpRuntime targetFramework="4.5"/>
  </system.web>

  <appSettings>
    <add key="webPages:Version" value="2.0"/>
  </appSettings>


  <connection
      protocol="Http"
      address="demoshop.fact-finder.de"
      port="80"
      context="FACT-Finder"
      channel="de"
      language="de"
    >
    <authentication
        type="Advanced"
        username="user"
        password="userpw"
        advancedPrefix="FACT-FINDER"
        advancedPostfix="FACT-FINDER"
        />
  </connection>

  <modules
    tracking="true"
    suggest="true"
    tagcloud="true"
    similarrecords="false"
    recommendations="false"
    campaigns="true" />

  <fields
    recordId="ArticleNumber"
    productNumber="ArticleNumber"
    masterProductNumber="MasterProductNumber"
    productName="Name"
    ean="EAN"
    brand="Brand"
    price="Price"
    description="Description"
    imageUrl="ImageURL"
    deeplink="ProductURL" />

  <parameters>
    <!-- parameter settings for the server -->
    <server>
      <ignore>
        <add name="password" />
        <add name="username" />
        <add name="timestamp" />
      </ignore>
      <mapping>
        <add name="keywords" mapTo="query" />
      </mapping>
    </server>

    <!-- parameter settings for the client -->
    <client>
      <ignore>
        <add name="xml" />
        <add name="format" />
        <add name="channel" />
        <add name="password" />
        <add name="username" />
        <add name="timestamp" />
      </ignore>
      <mapping>
        <add name="query" mapTo="keywords" />
      </mapping>
    </client>
  </parameters>

  <log4net>
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <!-- File where the log should reside -->
      <file value="ff.log" />
      <appendToFile value="true" />
      <!-- FOR DATE BASED ROLL BACKUP -->
      <rollingStyle value="Date" />
      <datePattern value="yyyyMMdd" />
      <layout type="log4net.Layout.PatternLayout">
        <!-- Pattern to add timestamp, type, etc. -->
        <conversionPattern value="%5timestamp %5level (%logger) - %message %newline" />
      </layout>
    </appender>

    <root>
      <level value="DEBUG" />
      <appender-ref ref="RollingFileAppender" />
    </root>
  </log4net>
</configuration>